<select class="browser-default" disabled={{disabled}} {{action 'change' on='change'}}>
    {{#each displayContent key="@index" as |item|}}
        <option value="{{item}}" selected={{is-equal item selectedValue}}>
            {{item}}
        </option>
    {{/each}}
    {{#if label}}
        <label>{{label}}</label>
    {{/if}}
</select>
